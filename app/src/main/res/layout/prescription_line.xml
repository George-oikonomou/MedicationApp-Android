<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_s"
    android:layout_marginHorizontal="@dimen/spacing_m"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp"
    app:cardCornerRadius="@dimen/radius_l"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_l">

        <!-- First row: ID label + Name -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Pill ID -->
            <TextView
                android:id="@+id/idPill"
                style="@style/LabelCell"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:minHeight="@dimen/spacing_xl"
                android:gravity="center_vertical" />

            <!-- Name -->
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_m"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:textColor="?attr/colorPrimary"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <!-- Schedule pill + doctor/desc -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pillSchedule"
                style="@style/LabelCell"
                android:minHeight="28dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_m"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <!-- Dates -->
        <TextView
            android:id="@+id/dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
