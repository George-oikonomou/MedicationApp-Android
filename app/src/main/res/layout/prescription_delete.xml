<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title inside the dialog content -->
        <TextView
            android:id="@+id/txtDlgTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_del"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="@dimen/spacing_l" />

        <!-- Input ID with clear labeling -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_id"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingBottom="@dimen/spacing_xs" />

        <EditText
            android:id="@+id/inputUid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_id"
            android:inputType="number"
            android:padding="@dimen/spacing_m"
            android:background="@drawable/txt_background"
            android:textSize="16sp" />

        <!-- Action buttons container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/spacing_xl">

            <!-- Cancel -->
            <Button
                android:id="@+id/btnCancel"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />

            <!-- Delete -->
            <Button
                android:id="@+id/btnDelete"
                style="?attr/materialButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_del"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/themeColor"
                android:layout_marginStart="@dimen/spacing_m" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
